print("Assertions: 16")

# Test the truth table

assert (1 and 2) == 2
assert (0 and 2) == 0
assert (1 and 0) == 0
assert (0 and 0) == 0

assert (1 or 2) == 1
assert (0 or 1) == 1
assert (2 or 0) == 2
assert (0 or 0) == 0

# Test short-circuiting

for i in ["1", "2", "3", "4"]:
    $x[i] @default = 0

def f(a):
    $x[a] += 1
    return 2

def g(a, b):
    $x[a] += 2
    return b

assert (g("1", 1) and f("1")) == 2
assert (g("2", 0) and f("2")) == 0

assert $x["1"] == 3
assert $x["2"] == 2

assert (g("3", 1) or f("3")) == 1
assert (g("4", 0) or f("4")) == 2

assert $x["3"] == 2
assert $x["4"] == 3
